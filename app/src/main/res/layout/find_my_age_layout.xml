<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700">

    <EditText
        android:id="@+id/Date_of_Bath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:background="@color/gray"
        android:ems="10"
        android:hint="Enter DOB"
        android:inputType="date"
        android:minHeight="48dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.544"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/show_age"
        android:layout_width="191dp"
        android:layout_height="35dp"
        android:layout_marginTop="96dp"
        android:background="@color/gray"
        android:hint="shows_your_age"
        android:textColor="@color/black"

        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/Date_of_Bath"
        app:layout_constraintStart_toStartOf="@+id/Date_of_Bath"
        app:layout_constraintTop_toBottomOf="@+id/Date_of_Bath" />

    <Button
        android:id="@+id/buGetAge"
        android:layout_width="144dp"
        android:layout_height="48dp"
        android:layout_marginTop="100dp"
        android:text="get_my_age"
        app:layout_constraintEnd_toEndOf="@+id/show_age"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="@+id/show_age"
        app:layout_constraintTop_toBottomOf="@+id/show_age" />
</androidx.constraintlayout.widget.ConstraintLayout>