<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sendMoneyFragment">


    <EditText
        android:id="@+id/receivername_text"
        android:layout_width="345dp"
        android:layout_height="53dp"
        android:hint="Enter receiver name"

        android:text=""
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11"/>

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="124dp"
        android:layout_height="48dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="64dp"
        android:text="CANCEL"
        app:layout_constraintEnd_toStartOf="@+id/next_button2"
        app:layout_constraintStart_toStartOf="@+id/receivername_text"
        app:layout_constraintTop_toBottomOf="@+id/receivername_text" />

    <Button
        android:id="@+id/next_button2"
        android:layout_width="112dp"
        android:layout_height="53dp"
        android:text="NEXT"
        app:layout_constraintEnd_toEndOf="@+id/receivername_text"
        app:layout_constraintHorizontal_bias="0.915"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cancel_button" />
</androidx.constraintlayout.widget.ConstraintLayout>