<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="please enter one app"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/findMyAge_button"
        android:layout_width="399dp"
        android:layout_height="91dp"
        android:layout_marginTop="80dp"
        android:text="OPEN FIND MY AGE APP"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.277"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/calculator_button"
        android:layout_width="399dp"
        android:layout_height="91dp"
        android:layout_marginTop="24dp"
        android:text="OPEN CALCULATOR"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/findMyAge_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/findMyAge_button"
        app:layout_constraintTop_toBottomOf="@+id/findMyAge_button" />

    <Button
        android:id="@+id/ticTacToyGame_button"
        android:layout_width="399dp"
        android:layout_height="91dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="96dp"
        android:text="OPEN TICTACGAME"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/calculator_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/calculator_button"
        app:layout_constraintTop_toBottomOf="@+id/calculator_button" />
</androidx.constraintlayout.widget.ConstraintLayout>