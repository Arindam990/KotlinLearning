<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FBPage.StoryFragment">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Create Story"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />

    <Button
        android:id="@+id/music_button"
        android:layout_width="109dp"
        android:layout_height="145dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        android:text="Music"
        android:textAllCaps="false"
        android:backgroundTint="@color/purple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/text_button"
        android:layout_width="109dp"
        android:layout_height="145dp"
        android:layout_marginStart="8dp"
        android:text="Text"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:backgroundTint="@color/yellow"
        app:layout_constraintStart_toEndOf="@+id/music_button"
        app:layout_constraintTop_toTopOf="@+id/music_button" />

    <Button
        android:id="@+id/green_screen_button"
        android:layout_width="109dp"
        android:layout_height="145dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/green"
        android:text="Green Screen"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@+id/text_button"
        app:layout_constraintTop_toTopOf="@+id/text_button" />

    <Button
        android:id="@+id/allow_access_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allow access"
        android:textSize="15dp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_button"
        app:layout_constraintVertical_bias="0.358" />

    <ImageView
        android:id="@+id/camera_imageView"
        android:layout_width="76dp"
        android:layout_height="78dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/cemera_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allow_access_button" />
</androidx.constraintlayout.widget.ConstraintLayout>