<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/weatherFragment">

    <fragment
        android:id="@+id/aboutInfoFragment"
        android:name="com.android.kotlinlearning.FBPage.AboutInfoFragment"
        android:label="fragment_about_info"
        tools:layout="@layout/fragment_about_info" />
    <fragment
        android:id="@+id/coverpicFragment"
        android:name="com.android.kotlinlearning.FBPage.CoverpicFragment"
        android:label="fragment_coverpic"
        tools:layout="@layout/fragment_coverpic" />
    <fragment
        android:id="@+id/dotFragment"
        android:name="com.android.kotlinlearning.FBPage.DotFragment"
        android:label="fragment_dot"
        tools:layout="@layout/fragment_dot" />
    <fragment
        android:id="@+id/editDetailsFragment"
        android:name="com.android.kotlinlearning.FBPage.EditDetailsFragment"
        android:label="fragment_edit_details"
        tools:layout="@layout/fragment_edit_details" />
    <fragment
        android:id="@+id/editprofileFragment"
        android:name="com.android.kotlinlearning.FBPage.EditprofileFragment"
        android:label="fragment_editprofile"
        tools:layout="@layout/fragment_editprofile" />
    <fragment
        android:id="@+id/houseFragment"
        android:name="com.android.kotlinlearning.FBPage.HouseFragment"
        android:label="fragment_house"
        tools:layout="@layout/fragment_house" />
    <fragment
        android:id="@+id/followFragment"
        android:name="com.android.kotlinlearning.FBPage.FollowFragment"
