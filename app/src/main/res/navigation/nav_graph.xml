        tools:layout="@layout/fragment_instra" />
    <fragment
        android:id="@+id/lockFragment"
        android:name="com.android.kotlinlearning.FBPage.LockFragment"
        android:label="fragment_lock"
        tools:layout="@layout/fragment_lock" />
    <fragment
        android:id="@+id/profilepicFragment"
        android:name="com.android.kotlinlearning.FBPage.ProfilepicFragment"
        android:label="fragment_profilepic"
        tools:layout="@layout/fragment_profilepic" />
    <fragment
        android:id="@+id/profile_fragment"
        android:name="com.android.kotlinlearning.FBPage.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_homeFragment1_to_storyFragment2"
            app:destination="@id/storyFragment2" />
        <action
            android:id="@+id/action_homeFragment1_to_coverpicFragment"
            app:destination="@id/coverpicFragment" />
        <action
            android:id="@+id/action_profile_fragment_to_profilepicFragment"
            app:destination="@id/profilepicFragment" />
    </fragment>
    <fragment
        android:id="@+id/storyFragment2"
        android:name="com.android.kotlinlearning.FBPage.StoryFragment"
        android:label="fragment_story"
        tools:layout="@layout/fragment_story" />

    <fragment
        android:id="@+id/restaurantHomeFragment"
        android:name="com.android.kotlinlearning.rastaurant.RestaurantHomeFragment"
        android:label="fragment_restaurant_home"
        tools:layout="@layout/fragment_restaurant_home" />
    <fragment
        android:id="@+id/weatherFragment"
        android:name="com.android.kotlinlearning.GettingSunriseTime.weatherFragment"
        android:label="weatherFragment" />
